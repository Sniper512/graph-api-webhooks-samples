APP_SECRET=your_app_secret_here
TOKEN=your_token_here
PORT=3000

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
# Optional: override model (defaults to gpt-3.5-turbo)
# Options: gpt-3.5-turbo, gpt-4, gpt-4-turbo, gpt-4o, gpt-4o-mini
OPENAI_MODEL=gpt-3.5-turbo

NGROK_DOMAIN=your_ngrok_domain_here

DB_URL=mongodb+srv://username:password@cluster.mongodb.net/Meta-App?appName=ClusterName

# FAQ Scraper Service URL
# For local development: http://localhost:5001
# For production: your deployed FAQ scraper URL
FAQ_SCRAPER_URL=https://faqs-extracter-a94512252aa4.herokuapp.com

# Frontend URLs for CORS and redirects
FRONTEND_URL=https://meta-user-dashboard.vercel.app
ADMIN_FRONTEND_URL=https://meta-app-admin-dashboard.vercel.app
# Frontend URLs for dynamic redirects
FRONTEND_URL_LOCAL=http://localhost:5173
FRONTEND_URL_PROD=https://meta-user-dashboard.vercel.app

# JWT Secret for authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Admin secret key for admin panel access
ADMIN_SECRET=your_admin_secret_here

# Master encryption key for sensitive data (Instagram credentials)
ENCRYPTION_MASTER_KEY=your_encryption_master_key_here

# Google Calendar Integration
GOOGLE_CALENDAR_CLIENT_ID=your_google_calendar_client_id_here
GOOGLE_CALENDAR_CLIENT_SECRET=your_google_calendar_client_secret_here
# Redirect URIs for different environments
GOOGLE_CALENDAR_REDIRECT_URI_LOCAL=http://localhost:3000/api/google-calendar/auth/google/callback
GOOGLE_CALENDAR_REDIRECT_URI_PROD=https://your-production-domain.com/api/google-calendar/auth/google/callback
# Active redirect URI (automatically selected based on NODE_ENV)
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:3000/api/google-calendar/auth/google/callback
